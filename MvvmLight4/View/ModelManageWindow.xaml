<Controls:MetroWindow
    x:Class="MvvmLight4.View.ModelManageWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
    xmlns:local="clr-namespace:MvvmLight4.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:mvvm="http://www.galasoft.ch/mvvmlight"
    Title="模型管理"
    Width="590"
    Height="450"
    DataContext="{Binding Source={StaticResource Locator}, Path=ModelManage}"
    FontFamily="/MvvmLight4;component/Font/#Source Han Sans CN"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <mvvm:EventToCommand Command="{Binding LoadedCmd}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>
    <Grid Margin="5">
        <Grid.Resources>
            <Style TargetType="{x:Type Label}">
                <Setter Property="FontFamily" Value="/MvvmLight4;component/Font/#Source Han Sans CN" />
            </Style>
        </Grid.Resources>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>
        <!--  迁移已有模型  -->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="5*" />
                <ColumnDefinition Width="100" />
            </Grid.ColumnDefinitions>
            <TextBox
                Grid.Column="0"
                Height="25"
                Margin="10"
                VerticalContentAlignment="Center"
                Controls:TextBoxHelper.Watermark="模型名称"
                Text="{Binding AddModel.ModelName, UpdateSourceTrigger=PropertyChanged}" />
            <TextBox
                Grid.Column="1"
                Height="25"
                Margin="10"
                VerticalContentAlignment="Center"
                Controls:TextBoxHelper.Watermark="模型位置"
                Text="{Binding AddModel.Location, UpdateSourceTrigger=PropertyChanged}" />
            <Button
                Grid.Column="2"
                Width="80"
                Height="25"
                Command="{Binding AddModelCmd}"
                Content="迁移模型" />
        </Grid>
        <!--  模型管理  -->
        <DataGrid
            Name="ModelDG"
            Grid.Row="1"
            Width="550"
            AutoGenerateColumns="False"
            CanUserAddRows="False"
            CanUserDeleteRows="False"
            FontFamily="/MvvmLight4;component/Font/#Source Han Sans CN"
            GridLinesVisibility="Horizontal"
            HeadersVisibility="All"
            HorizontalScrollBarVisibility="Hidden"
            ItemsSource="{Binding Models}">
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="CellEditEnding">
                    <mvvm:EventToCommand Command="{Binding UpdateModelCmd}" PassEventArgsToCommand="True" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
            <DataGrid.Columns>
                <DataGridTextColumn
                    Width="150"
                    Binding="{Binding ModelModel.ModelName}"
                    Header="模型名称" />
                <DataGridTextColumn
                    Width="250"
                    Binding="{Binding ModelModel.Location}"
                    Header="文件位置"
                    IsReadOnly="True" />
                <DataGridTextColumn
                    Width="150"
                    Binding="{Binding ModelModel.CreateTime}"
                    Header="创建时间"
                    IsReadOnly="True" />
            </DataGrid.Columns>
        </DataGrid>
        <!--  删除模型  -->
        <Button
            Grid.Row="2"
            Width="80"
            Height="25"
            Margin="0,0,10,0"
            HorizontalAlignment="Right"
            Command="{Binding DeleteModelCmd}"
            CommandParameter="{Binding ElementName=ModelDG, Path=SelectedItem}"
            Content="删除" />
    </Grid>
</Controls:MetroWindow>
